{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",          // ✅ safest for ts-node beginners
    "rootDir": "./server",         // ✅ your server files
    "outDir": "./dist",            // ✅ build output if you ever compile
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
