{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // ✅ safest for ts-node beginners
    "rootDir": "./server", // ✅ your server files
    "outDir": "./dist", // ✅ build output if you ever compile
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
